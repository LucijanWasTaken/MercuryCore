@import "./vars.styl"

:root
html
body
main
	background background
	color light-text

a
	color hsl(260 100% 66%)
	transition 0.2s color
	&:hover
		&:not(.btn):not(.light-text)
			color hsl(260 100% 60%)
		&.light-text
			color var(--grey-text)

.light-text
	color light-text
.grey-text
	color grey-text

.bg-darker
	background darker

input
	background accent
	color light-text
	border 1px solid accent2
	&:active:not(:disabled)
		box-shadow 0 0 0 2px #5c29c2 !important
	&:focus:not(:active):not(:disabled)
		box-shadow 0 0 0 2px background, 0 0 0 3px #5c29c2

lightstyles = primary secondary red-secondary first success danger dark
darkstyles = warning info light
styles = primary secondary tertiary quatenary red-secondary red-tertiary first success danger warning info light dark

for style in styles
	.btn-{style}
		&:active:not(:disabled)
			box-shadow 0 0 0 2px #5c29c2 !important
		&:focus:not(:active):not(:disabled)
			box-shadow 0 0 0 2px background, 0 0 0 3px #5c29c2
		&:disabled
			opacity 0.5

.is-invalid
	background-position 99% 0.5rem

.text-red-5
	color rgb(239 68 68)
